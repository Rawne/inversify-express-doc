{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./typings/gobals",
            "./typings/modules"
        ],
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "declaration": true,
        "rootDir": "./src"
    },
    "includes": [
        "src/*.ts",
        "src/**/*.ts",
        "test/*.tests.ts",
        "test/**/*.ts",
        "typings/index.d.ts"
    ]
}